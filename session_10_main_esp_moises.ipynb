def concatenar_espacio(a, b):
    '''
    Entrada: Dos cadenas
    Salida: Una única cadena separada por un espacio
        
    Ejemplo:
    Entrada: 'John', 'Smith'
    Salida: 'John Smith'
    '''
    return f"{a} {b}"


